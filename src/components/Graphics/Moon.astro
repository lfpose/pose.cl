---
import Sun from './Sun.astro'
import Spaceship from './Spaceship.astro'
---

<section class="container">
  <div class="moon">
    <div class="shadow"/>
    <div class="crater"/>
    <div class="crater"/>
    <div class="crater"/>
  </div>
</section>

<style>

.moon .shadow {
  position: absolute;
  width: 100%;
  height: 100%;
  /*background: red;*/
  background: radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.1) 40%, rgba(0, 0, 0, 0) 50%);
  transform: rotateX(90deg) translateZ(-150px);
  z-index: -1;
}


.moon:before {
  content: "";
  position: absolute;
  top: 1%;
  left: 5%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
  /*background: radial-gradient(circle at 6em 6px, #fff, rgba(255, 255, 255, 0) 58%);*/
  /*background: radial-gradient(circle at 50% 120%, #fff, #ddd 10%, #aaa 80%, #000 100%);*/
  filter: blur(5px);
  z-index: 2;
}


.moon {
  background-color: #f5f5f5;
  height: 8em;
  width: 8em;
  border-radius: 50%;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: -200px;
  bottom: 0;

  background: radial-gradient(circle at 4em 4em, white, #ccc);

  box-shadow: 
    inset -12px -12px 0 0 rgba(0,0,0,0.2),
    0 0 0 0.6em rgba(255, 255, 255, 0.05),    
    0 0 0 1.2em rgba(255, 255, 255, 0.05), 
    0 0 0 1.8em rgba(255, 255, 255, 0.05);
}

@media screen and (min-width: 700px) {
  .container {
    font-size: 20px;
  }
}
.crater {
  position: absolute;
  top: 35%;
  left: 35%;
  width: 15%;
  height: 15%;
  background-color: #b6b6b6;
  box-shadow: inset 4px 4px 0 0 #999;
  border-radius: 50%;

  transform: 
    translate(-160%, -70%)
    skewX(0deg) skewY(-20deg);
}
.crater:nth-child(2) {
  transform: translate(-20%, -140%) scale(0.7)
    skewX(0deg) skewY(-15deg);
}
.crater:nth-child(3) {
  transform: translate(-70%, 30%) scale(0.5)
    skewX(0deg) skewY(-5deg);
}


