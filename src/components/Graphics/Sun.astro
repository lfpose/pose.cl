// Graphics Sun
// Graphic element displaying a sun
---

<div class="wrapper">
  <div class="lightsource"></div>
    <slot/>
</div>
  {/*<div class="shadow"></div>*/}


<style>

.wrapper {
  width: 220px;
  position: relative;
  margin: 50px auto;
}

.lightsource {
  width: 50px;
  height: 50px;
  position: relative;
  margin: 0;
  background: #fff983;
  border-radius: 25px;
  box-shadow: 0 0 20px #fff6b5;
  filter: blur(2px);
  animation: lightsource 4s infinite;
}

.shadow {
  width: 200px;
  height: 60px;

  position: absolute;
  left: 10px;
  bottom: 2px;
  z-index: -1;

  background: -webkit-linear-gradient(#000000 0%,#00000f 100%);
  filter: blur(5px);
  transform: skewX(70deg);
  transform-origin: bottom center;
  animation: shadow 4s infinite;
}

@keyframes lightsource {
  0%   {left: 0;}
  50%  {left: 100%;}
  100% {left: 0%;}
}

@keyframes shadow {
  0%   {transform: skewX(-50deg);}
  50%  {transform: skewX(55deg);}
  100% {transform: skewX(-50deg);}
}

</style>
