---
import BaseLayout from '../layouts/BaseLayout.astro';
import CurriculumVitaes from '../components/CVs/CurriculumVitaes.astro'
import GraphicsMoon from '../components/Graphics/Moon.astro'
import GraphicsSun from '../components/Graphics/Sun.astro'
import HeroPicture from '../components/HeroPicture.astro'
import PortfolioCards from '../components/portfolio/PortfolioCards.astro'
const { title } = Astro.props
---

<BaseLayout title={title}>
  <div class="home-container">
    <div class="home">
      <h1>lucas pose merani</h1>
      <h2>fullstack web developer - software engineer</h2>
      <CurriculumVitaes/>
    </div>
  </div>

  <div class="project-cards">
    <PortfolioCards>
  </div>

</BaseLayout>

<style>

h1 {
  font-family: var(--font-family-sans);
  font-weight: 900;
  margin-bottom: 0;
  line-height: 1.3;
  letter-spacing: 3px;
}

h2 {
  margin: 0px;
  @apply text-transparent bg-clip-text bg-gradient-to-r from-teal-700 to-cyan-500;
  /*color: var(--text-secondary);*/
}

.home-container {
  font-family: 'Sofia Sans Semi Condensed', sans-serif;
  font-weight: 300;
  align-items: center;
  display: flex;
  justify-content: center;
  height: 500px;
}

.project-cards {
}

</style>
